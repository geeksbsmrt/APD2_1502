<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.geeksbsmrt.puttputtpartner.Fragment_PlayGame">

     <TableLayout
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:id="@+id/PG_playerTable"
         android:divider="?android:dividerHorizontal"
         android:showDividers="middle|end"
         >
         <TableRow
             >
             <TextView
                 android:text="@string/hole"
                 android:textAppearance="?android:textAppearanceMedium"
                 android:layout_margin="5dp"
                 />
         </TableRow>
         <TableRow
             >
             <TextView
                 android:text="@string/par"
                 android:textAppearance="?android:textAppearanceMedium"
                 android:layout_margin="5dp"
                 />
         </TableRow>
         <TableRow
             >
            <TextView
                android:text="@string/player"
                android:layout_margin="5dp"
                />
         </TableRow>

     </TableLayout>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PG_scoreTable"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle|end"
            >
            <TableRow
                android:divider="?android:dividerVertical"
                android:showDividers="beginning|middle|end"
                android:id="@+id/PG_holeRow"
                >

            </TableRow>
            <TableRow
                android:divider="?android:dividerVertical"
                android:showDividers="beginning|middle|end"
                android:id="@+id/PG_parRow"
                >

            </TableRow>
            <TableRow
                >
                <TextView
                    android:layout_margin="5dp"
                    />
            </TableRow>
            <TableRow
                android:divider="?android:dividerVertical"
                android:showDividers="beginning|middle|end"
                android:background="#003300">
                <TextView
                    android:text="0"
                    android:layout_margin="5dp"/>
            </TableRow>
            <TableRow
                android:divider="?android:dividerVertical"
                android:showDividers="beginning|middle|end"
                android:background="#003300">
                <TextView
                    android:text="0"
                    android:layout_margin="5dp"/>
            </TableRow>
        </TableLayout>

    </HorizontalScrollView>

    <TableLayout
        android:layout_width="0dp"
        android:layout_weight=".14"
        android:layout_height="wrap_content"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle|end"
        android:id="@+id/PG_totalTable">
        <TableRow
            android:divider="?android:dividerVertical"
            android:showDividers="middle|beginning"
            >
            <TextView
                android:text="@string/total"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_margin="5dp"
                />
        </TableRow>
        <TableRow
            android:divider="?android:dividerVertical"
            android:showDividers="middle|beginning"
            >
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_margin="5dp"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>
